{
  "name": "@atlas-gtm/agents",
  "version": "0.1.0",
  "description": "Production agents for Atlas GTM",
  "type": "module",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": "./src/index.ts",
    "./lead-scorer": "./src/lead-scorer/index.ts",
    "./reply-handler": "./src/reply-handler/index.ts",
    "./meeting-prep": "./src/meeting-prep/index.ts"
  },
  "scripts": {
    "typecheck": "tsc --noEmit",
    "test": "bun test",
    "test:e2e": "bun test --testNamePattern='E2E'",
    "dev": "bun run --watch src/index.ts",
    "lead-scorer": "bun --env-file=../../.env run src/lead-scorer/server.ts",
    "lead-scorer:dev": "bun --env-file=../../.env --watch run src/lead-scorer/server.ts",
    "reply-handler": "bun --env-file=../../.env run src/reply-handler/server.ts",
    "reply-handler:dev": "bun --env-file=../../.env --watch run src/reply-handler/server.ts",
    "reply-handler:mock": "bun run src/__tests__/reply-handler/fixtures/mock-server.ts",
    "meeting-prep": "bun --env-file=../../.env run src/meeting-prep/server.ts",
    "meeting-prep:dev": "bun --env-file=../../.env --watch run src/meeting-prep/server.ts",
    "learning-loop": "bun --env-file=../../.env run src/learning-loop/server.ts",
    "learning-loop:dev": "bun --env-file=../../.env --watch run src/learning-loop/server.ts"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.30.0",
    "@atlas-gtm/lib": "workspace:*",
    "@slack/web-api": "7.13.0",
    "@upstash/redis": "^1.34.0",
    "zod": "^3.23.0",
    "zod-to-json-schema": "^3.23.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5.4.0"
  }
}
