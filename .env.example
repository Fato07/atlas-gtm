# GTM Brain Configuration
# Copy this file to .env and fill in your values

# ===========================================
# REQUIRED: AI & Embeddings
# ===========================================

# Anthropic API Key (for Claude agents)
ANTHROPIC_API_KEY=sk-ant-xxxxx

# Voyage AI API Key (for embeddings)
VOYAGE_API_KEY=pa-xxxxx

# ===========================================
# REQUIRED: Vector Database
# ===========================================

# Qdrant URL (local Docker or cloud)
QDRANT_URL=http://localhost:6333

# Qdrant API Key (REQUIRED for API authentication)
QDRANT_API_KEY=your-secure-qdrant-api-key

# ===========================================
# REQUIRED: PostgreSQL (n8n backend)
# ===========================================

# PostgreSQL user (default: n8n)
POSTGRES_USER=n8n

# PostgreSQL password (REQUIRED, min 8 characters)
POSTGRES_PASSWORD=your-secure-postgres-password

# ===========================================
# REQUIRED: CRM & Email
# ===========================================

# Attio CRM API Key
ATTIO_API_KEY=

ATTIO_PIPELINE_LIST_ID=

# Instantly Email API Key
INSTANTLY_API_KEY=

# ===========================================
# OPTIONAL: Caching (Upstash Redis)
# ===========================================

# Upstash Redis REST URL
UPSTASH_REDIS_URL=https://xxxxx.upstash.io

# Upstash Redis REST Token
UPSTASH_REDIS_TOKEN=

# ===========================================
# OPTIONAL: n8n Workflow Automation
# ===========================================

# n8n Basic Auth Credentials
N8N_USER=admin
N8N_PASSWORD=changeme

# n8n Webhook URL (for external triggers)
N8N_WEBHOOK_URL=http://localhost:5678

# ===========================================
# OPTIONAL: State Management
# ===========================================

# Directory for agent state files (defaults to ./state)
STATE_DIR=./state

# ===========================================
# OPTIONAL: Observability (Langfuse)
# ===========================================

# Langfuse Public Key (get from app.langfuse.com)
LANGFUSE_PUBLIC_KEY=pk-lf-xxxxx

# Langfuse Secret Key (get from app.langfuse.com)
LANGFUSE_SECRET_KEY=sk-lf-xxxxx

# Langfuse Base URL (defaults to https://cloud.langfuse.com)
# LANGFUSE_BASE_URL=https://cloud.langfuse.com

# Enable/disable Langfuse observability (defaults to true if keys present)
# LANGFUSE_ENABLED=true

# ===========================================
# OPTIONAL: Security (Lakera Guard)
# ===========================================

# Lakera Guard API Key (get from console.lakera.ai)
LAKERA_GUARD_API_KEY=

# Lakera Project ID (optional, for tracking)
# LAKERA_PROJECT_ID=

# Enable/disable Lakera Guard (defaults to true if API key present)
# LAKERA_GUARD_ENABLED=true

# ===========================================
# OPTIONAL: RAG Evaluation (Ragas)
# ===========================================

# OpenAI API Key (for Ragas evaluator LLM)
# OPENAI_API_KEY=sk-xxxxx

# ===========================================
# REQUIRED: Slack (for Meeting Prep Agent)
# ===========================================

# Slack Bot Token (for sending messages)
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token

# Slack channel ID for meeting prep briefs
SLACK_BRIEF_CHANNEL=C0123456789

# ===========================================
# REQUIRED: Meeting Prep Agent
# ===========================================

# Webhook authentication secret (32+ characters recommended)
MEETING_PREP_SECRET=your-32-character-webhook-secret-here

# MCP Server URL for REST API
# The Meeting Prep Agent calls MCP tools via this REST endpoint
MCP_SERVER_URL=http://localhost:8100

# Default brain ID for processing
DEFAULT_BRAIN_ID=brain_saas_test

# Meeting Prep Agent port (default: 3003)
# MEETING_PREP_PORT=3003

# ===========================================
# OPTIONAL: MCP Server Configuration
# ===========================================

# REST API port for MCP tools (default: 8100)
REST_PORT=8100

# Native MCP protocol port (default: 8001)
# MCP_PORT=8001

# ===========================================
# OPTIONAL: General
# ===========================================

TIMEZONE=UTC
NODE_ENV=development
